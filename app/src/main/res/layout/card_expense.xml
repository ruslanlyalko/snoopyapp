<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/colorWhite"
              android:layout_height="wrap_content">

    <com.ruslanlyalko.snoopyapp.presentation.widget.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/swipe_menu"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:divider="?android:dividerVertical"
            android:dividerPadding="2dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageButton
                android:id="@+id/button_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_action_delete_red" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_action_cost" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDividers">

                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/text_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorBlack70"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/text_total"
                        android:layout_marginRight="4dp"
                        android:text="12.06 o 9:55"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorBlack50" />

                    <TextView
                        android:id="@+id/text_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/text_date"
                        android:textColor="@color/colorBlack70"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_title1"
                        android:layout_toLeftOf="@id/text_date"
                        android:textColor="@color/colorBlack50" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </com.ruslanlyalko.snoopyapp.presentation.widget.SwipeLayout>
</LinearLayout>
